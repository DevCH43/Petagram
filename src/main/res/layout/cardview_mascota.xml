<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_contacto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/cornerCardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imgFotoMascota"
            android:layout_width="@dimen/ImgMascotaWH"
            android:layout_height="@dimen/ImgMascotaWH"
            android:src="@drawable/oso"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/em_1"
            android:paddingBottom="@dimen/em_1"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnLike"
                    android:layout_width="@dimen/ButoonLikeWidth"
                    android:layout_height="@dimen/ButoonLikeHeight"
                    android:textSize="@dimen/card_titulo_font_size"
                    android:background="@drawable/hueso_verde"/>

                <TextView
                    android:id="@+id/tvNombreMascota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/elevationActionBar"
                    android:textSize="@dimen/FontSizeStyleMascota"
                    android:textStyle="bold"
                    android:text="Nombre Mascota"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/SeparateImageLikes"
                >

                <ImageView
                    android:layout_width="@dimen/ButoonLikeWidth"
                    android:layout_height="@dimen/ButoonLikeHeight"
                    android:src="@drawable/hueso_naranja"/>

                <TextView
                    android:id="@+id/tvNumLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/elevationActionBar"
                    android:layout_marginTop="8dp"
                    android:textSize="@dimen/FontSizeStyleMascota"
                    android:textStyle="bold"
                    android:text="57"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>