<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="mx.com.logydes.petagram.DetalleMascota"
    android:background="@color/colorFondo">

    <include
        android:id="@+id/miActionBar"
        layout="@layout/action_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imgFotoMascota"
            android:layout_width="@dimen/ImgMascotaWH"
            android:layout_height="@dimen/ImgMascotaWH"
            android:layout_marginTop="@dimen/em_1"
            android:src="@drawable/oso"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/em_1"
            android:paddingBottom="@dimen/em_1"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnLike"
                    android:layout_width="@dimen/ButoonLikeWidth"
                    android:layout_height="@dimen/ButoonLikeHeight"
                    android:textSize="@dimen/card_titulo_font_size"
                    android:enabled="false"
                    android:background="@drawable/hueso_verde"/>

                <TextView
                    android:id="@+id/tvNombreMascota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/elevationActionBar"
                    android:textSize="@dimen/FontSizeStyleMascota"
                    android:textStyle="bold"
                    android:text="Nombre Mascota"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/SeparateImageLikes"
                >

                <ImageView
                    android:layout_width="@dimen/ButoonLikeWidth"
                    android:layout_height="@dimen/ButoonLikeHeight"
                    android:src="@drawable/hueso_naranja"/>

                <TextView
                    android:id="@+id/tvNumLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/elevationActionBar"
                    android:layout_marginTop="8dp"
                    android:textSize="@dimen/FontSizeStyleMascota"
                    android:textStyle="bold"
                    android:text="57"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>