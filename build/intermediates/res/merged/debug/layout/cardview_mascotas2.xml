<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/cardview_contacto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/cornerCardView"
    android:paddingTop="@dimen/em_1"
    android:paddingBottom="@dimen/em_1"
    android:paddingLeft="@dimen/em_1"
    android:paddingRight="@dimen/em_1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--
        <ImageView
            android:id="@+id/imgFotoMascotaMini"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"/>
        -->
        <mx.com.logydes.petagram.pojo.RoundImage
            android:id="@+id/imgFotoMascotaMini"
            android:layout_width="@dimen/Size100dp"
            android:layout_height="@dimen/Size100dp"
            android:layout_marginTop="@dimen/em_1"
            app:civ_border="true"
            app:civ_border_color="#fff"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#ccc"
            app:civ_shadow_radius="5"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/SeparateImageLikes2"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/imgFotoMascotaMini"
            >

            <ImageView
                android:layout_width="@dimen/ButoonLikeWidthMini"
                android:layout_height="@dimen/ButoonLikeHeightMini"
                android:src="@drawable/hueso_naranja"/>

            <TextView
                android:id="@+id/tvNumLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/elevationActionBar"
                />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>